<h2 class="mt-3">New book</h2>
<%= form_for Book.new do |f| %>
  <div class="form-group">
    <label for="user_name">Title</label>
    <%= f.text_field :title, class:"form-control name" %>
  </div>
  <div class="form-group">
    <label for="user_name">Opinion</label>
    <%= f.text_area :body, class:"form-control name" %>
  </div>
  <div class="form-group">
    <%= f.submit 'Create Book', class:"btn btn-success" %>
  </div>
<% end %>